---
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import '../styles/global.css';

const pageTitle = "About Me";

const identity = {
  firstName: "Austine",
  country: "Kenya",
  occupation: "Security Researcher",
//   hobbies: ["Reading Books", "Dancing", "Making Content"],
  course: ["IT"]
};

const skills = ["JavaScript", "React", "Python", "Making Content"];
const interests = ["InfoSec"]

const skillColor = "navy";
---

<html lang="en">
  <head>
    <meta charset="utf-8" />
    <link rel="icon" type="image/ico" href="/public/logo.ico" />
    <meta name="viewport" content="width=device-width" />
    <meta name="generator" content={Astro.generator} >
    <title>{pageTitle}</title>
    <style define:vars={{skillColor}}>
        h1 {
            color: purple;
            font-size: 2rem;
            font-weight: bold;
        }
        .skill {
            color: var(--skillColor);
            font-weight: bold;
        }
    </style>
  </head>
  <body>
    <Header /> 
    <h1>{pageTitle}</h1>
    <ul>
        <li>I am  {identity.firstName}.</li>
        <li>I live in {identity.country}. and I am a student studying {identity.course}</li>
    </ul>
    <h2>Skills</h2>
    <ul>
        {skills.map((skill) => <li class="skill">{skill}</li>)}
    </ul>
    <h2>Interests</h2>
    <ul>
        {interests.map((interest) => <li>{interest}</li>)}
    </ul>
    <p>This site will update as I add stuff, so keep checking back</p>
    <Footer />
    <script>
      import "../scripts/menu.js";
    </script>
  </body>
</html>